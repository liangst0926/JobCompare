<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/jobOfferComparisonText"
            android:layout_width="413dp"
            android:layout_height="60dp"
            android:text="Job Offer Comparison" />

        <Button
            android:id="@+id/currentJobButton"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:text="Enter/Edit Current Job Details" />

        <Button
            android:id="@+id/jobOffersButton"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:text="Enter Job Offers" />

        <Button
            android:id="@+id/comparisonSettingsButton"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="Adjust Comparison Settings" />

        <Button
            android:id="@+id/compareJobOffersButton"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="Compare Job Offers" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>