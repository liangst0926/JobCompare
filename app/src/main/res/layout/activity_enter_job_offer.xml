<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterJobOffer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/editJobOfferTextID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Job Offer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleTextEditJobID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title:" />

            <EditText
                android:id="@+id/titleJobOfferID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/companyTextEditJobID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company:" />

            <EditText
                android:id="@+id/companyJobOfferID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/locationTextEditJobID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location ( City &amp; State):" />

            <EditText
                android:id="@+id/locationJobOfferID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/colTextJobOfferID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost of living in location (index):" />

            <EditText
                android:id="@+id/colJobOfferID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ysTextJobOfferID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yearly salary:" />

            <EditText
                android:id="@+id/ysJobOfferID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ybTextJobOfferID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yearly bonus:" />

            <EditText
                android:id="@+id/ybJobOfferID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/teleworkTextJobOfferID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allowed weekly telework days (0-5):" />

            <EditText
                android:id="@+id/teleworkJobOfferID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/leaveTextJobOfferID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leave days:" />

            <EditText
                android:id="@+id/leaveJobOfferID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gymTextJobOfferID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gym membership allowance($0-$500):" />

            <EditText
                android:id="@+id/gymJobOfferID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/saveButtonJobOfferID"
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:text="Save" />

            <Button
                android:id="@+id/cancelButtonJobOfferID"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:text="Cancel" />

            <Button
                android:id="@+id/enterButtonJobOfferID"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="ENTER ANOTHER OFFER"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <Button
                android:id="@+id/compareButtonJobOfferID"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:text="COMPARE JOBS"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <Button
                android:id="@+id/backButtonJobOfferID"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:text="Exit " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/compareWithCurrentID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Compare With Current Job" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>